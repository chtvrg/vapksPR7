<Window x:Class="vapksPR7.BookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Книга" Height="450" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Название"/>
            <TextBox x:Name="NameBox" Margin="0,0,0,10"/>

            <TextBlock Text="Фамилия автора"/>
            <TextBox x:Name="AuthorLastBox" Margin="0,0,0,10"/>

            <TextBlock Text="Имя автора"/>
            <TextBox x:Name="AuthorNameBox" Margin="0,0,0,10"/>

            <TextBlock Text="Отчество автора"/>
            <TextBox x:Name="AuthorMiddleBox" Margin="0,0,0,10"/>

            <TextBlock Text="Год"/>
            <TextBox x:Name="YearBox" Margin="0,0,0,10"/>

            <TextBlock Text="Жанр"/>
            <ComboBox x:Name="GenreBox" DisplayMemberPath="genre" Margin="0,0,0,10"/>

            <TextBlock Text="Статус"/>
            <ComboBox x:Name="StatusBox" DisplayMemberPath="status1"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" Margin="0,15,0,0">
            <Button Content="Сохранить" Width="100" Margin="5" Click="Save_Click"/>
            <Button Content="Отмена" Width="100" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
